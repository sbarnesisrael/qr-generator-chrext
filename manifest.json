{
	"manifest_version": 2,

	"name": "QR Generator",
	"description": "This extension generates QR codes from links.",
	"version": "0.2",
	"background": { "scripts": ["js/background.js"] },
	
	"permissions": [
		"contextMenus",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"page_action": {
		"default_icon": "imgs/icon.png",
		"default_title": "QR Code generator",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "imgs/imageinfo-16.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/popup.js"],
			"run_at": "document_end"
		}
	]
}